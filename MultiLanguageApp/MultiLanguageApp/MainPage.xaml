<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MultiLanguageApp.MainPage" xmlns:translator="clr-namespace:MultiLanguageApp.Helpers">

    <StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">

        <Label FontSize="16" Padding="30,24,30,0" Text="{translator:Translate WelcomeMessage}"></Label>
        <Label FontSize="16" Padding="30,24,30,0" Text="{translator:Translate HelloMessage}">
            
            
        </Label>
        <Label FontSize="16" Padding="30,24,30,0" Text="{translator:Translate Name}"></Label>
        <Button Text="{translator:Translate ChangeLanguage}" BackgroundColor="Red" TextColor="White" Clicked="Button_Clicked"/>


    </StackLayout>
    

</ContentPage>
